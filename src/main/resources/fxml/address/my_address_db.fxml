                  					<PropertyValueFactory property="nachname" />
                  				</cellValueFactory>
                              </TableColumn>
                              <TableColumn fx:id="plzColumn" prefWidth="75.0" text="PLZ">
                              	<cellValueFactory>
                  					<PropertyValueFactory property="plz" />
                  				</cellValueFactory>
                              </TableColumn>
                              <TableColumn fx:id="ortColumn" prefWidth="75.0" text="Ort">
