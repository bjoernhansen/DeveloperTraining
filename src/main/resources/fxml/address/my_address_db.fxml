                        </VBox>
                        <Button fx:id="speichern" contentDisplay="RIGHT" layoutX="299.0" layoutY="307.0" mnemonicParsing="false" onAction="#saveNewPerson" prefHeight="25.0" prefWidth="123.0" text="Speichern" />
