<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="232.0" prefWidth="487.0" xmlns="http://javafx.com/javafx/8.0.162" xmlns:fx="http://javafx.com/fxml/1" fx:controller="training.database.jdbc.with_gui.simple.SampleController">
	<center>
		<TableView fx:id="designpatternTableView" editable="true" prefHeight="191.0" prefWidth="469.0" BorderPane.alignment="CENTER">
			<columns>
				<TableColumn prefWidth="-1.0" text="Id"> 
					<cellValueFactory>
						<PropertyValueFactory property="id" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn fx:id="vornameColumn" onEditCancel="#editCancel" onEditCommit="#editCommit" onEditStart="#editStart" prefWidth="-1.0" text="Name">
					<cellValueFactory>
						<PropertyValueFactory property="vorname" /><!-- Attribute der Datenklasse -->
					</cellValueFactory>
				</TableColumn>
				<TableColumn prefWidth="-1.0" text="Beschreibung">
					<cellValueFactory>
						<PropertyValueFactory property="nachname" /><!-- Attribute der Datenklasse -->
					</cellValueFactory>
				</TableColumn>
			</columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
		</TableView>
	</center>
   <top>
      <HBox alignment="TOP_RIGHT" prefHeight="41.0" prefWidth="360.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="inputName" prefHeight="25.0" prefWidth="80.0" promptText="Vorname" text="Name" />
            <TextField fx:id="inputBeschreibung" prefHeight="25.0" prefWidth="80.0" promptText="Nachname" text="Beschreibung" />
            <Button mnemonicParsing="false" onAction="#save" text="Save" />
            <Button mnemonicParsing="false" onAction="#delete" text="Delete" />
         </children>
      </HBox>
   </top>
</BorderPane>
