<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="training.javafx.gui.images.SampleController">
   <center>
      <ImageView fx:id="imageView" fitHeight="325.0" fitWidth="453.0" pickOnBounds="true" preserveRatio="true"
                 BorderPane.alignment="CENTER">
         <Image url="@/pictures/Koala.jpg"/>
      </ImageView>
   </center>
   <top>
      <Button mnemonicParsing="false" onAction="#action" text="Go" BorderPane.alignment="CENTER" />
   </top>
   <right>
      <Slider fx:id="slider" orientation="VERTICAL" value="100.0" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
