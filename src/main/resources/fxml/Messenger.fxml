<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="483.0" prefWidth="573.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="training.javafx.service.messenger.ui.MessengerController">
	<top>
		<ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
			<items>
				<TextField fx:id="localServerTextField" promptText="IP Adresse (Local Server)" text="127.0.0.1" />
				<Button mnemonicParsing="false" onAction="#serverStartAction" text="Server Start" />
				<TextField fx:id="nameTextField" promptText="Name" />
			</items>
		</ToolBar>
	</top>
	<bottom>
		<VBox prefHeight="75.0" prefWidth="573.0" BorderPane.alignment="CENTER">
			<children>
				<ToolBar prefHeight="40.0" prefWidth="200.0">
					<items>
						<TextField fx:id="messageTextField" prefHeight="31.0" prefWidth="496.0" />
						<Button mnemonicParsing="false" onAction="#messageSendAction" text="Send" />
					</items>
				</ToolBar>
				<ToolBar prefHeight="40.0" prefWidth="200.0">
					<items>
						<TextField fx:id="toServerTextField" prefHeight="31.0" prefWidth="177.0" promptText="IP Adresse (to Server)" text="127.0.0.2" />
						<Button mnemonicParsing="false" onAction="#connectToServerAction" text="Connect to Server" />
					</items>
				</ToolBar>
			</children>
		</VBox>
	</bottom>
	<center>
		<TableView fx:id="messageTableView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
			<columns>
				<TableColumn prefWidth="90.0" text="Name">
					<cellValueFactory>
						<PropertyValueFactory property="name" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn prefWidth="350.0" text="Nachricht">
					<cellValueFactory>
						<PropertyValueFactory property="message" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn minWidth="0.0" prefWidth="130.0" text="Zeit">
					<cellValueFactory>
						<PropertyValueFactory property="time" />
					</cellValueFactory>
				</TableColumn>
			</columns>
		</TableView>
	</center>
</BorderPane>
