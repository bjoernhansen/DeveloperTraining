<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="training.database.mybatis.OrderItemsMapper">
    <resultMap id="orderItemResultMap" type="training.database.mybatis.OrderItem">
        <id property="orderIdentification" column="order_id" />
        <result property="productId" column="product_id" />
        <result property="quantity" column="quantity" />
        <result property="unitPrice" column="unit_price" />
    </resultMap>
    <select id="selectAll" resultMap="orderItemResultMap">
        SELECT * FROM order_items
    </select>
</mapper>
