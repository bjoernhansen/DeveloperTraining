<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="348.0" prefWidth="673.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.design_pattern.dao.application.DesignPatternController">
	<center>
		<TableView fx:id="designPatternTableView" editable="true" prefHeight="191.0" prefWidth="469.0" BorderPane.alignment="CENTER">
			<columns>
				<TableColumn prefWidth="75.0" text="Id">
					<cellValueFactory>
						<PropertyValueFactory property="id" />
					</cellValueFactory>
				</TableColumn>
		
				<TableColumn prefWidth="250.0" text="Name">
					<cellValueFactory>
						<PropertyValueFactory property="name" /><!-- 
							Attribute der Datenklasse -->
					</cellValueFactory>
				</TableColumn>
				<TableColumn maxWidth="551.0" minWidth="100.0" prefWidth="490.0" text="Beschreibung">
					<cellValueFactory>
						<PropertyValueFactory property="beschreibung" />
					</cellValueFactory>
				</TableColumn>
			</columns>
		</TableView>
	</center>
	<top>
		<HBox alignment="TOP_RIGHT" prefHeight="41.0" prefWidth="360.0" BorderPane.alignment="CENTER">
			<children>
				<TextField fx:id="inputName" prefHeight="25.0" prefWidth="221.0" promptText="Name" />
				<TextField fx:id="inputBeschreibung" prefHeight="25.0" prefWidth="348.0" promptText="Beschreibung" />
				<Button mnemonicParsing="false" onAction="#save" text="Save" />
				<Button mnemonicParsing="false" onAction="#delete" text="Delete" />
			</children>
		</HBox>
	</top>
</BorderPane>
